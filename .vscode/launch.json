{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: My App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": ["run", "${workspaceFolder}/app.py"],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showReturnValue": true,
            "redirectOutput": true,
            "subProcess": false
        }
    ]
}
